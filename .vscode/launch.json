{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "python": "/workspaces/tarantulahawk/venv/bin/python",
            "justMyCode": true
        },
        {
            "name": "Python: FastAPI Backend",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": ["app.main:app", "--reload", "--host", "127.0.0.1", "--port", "8000"],
            "jinja": true,
            "python": "/workspaces/tarantulahawk/venv/bin/python",
            "cwd": "${workspaceFolder}/app/backend"
        }
    ]
}
