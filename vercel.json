{
  "version": 2,
  "cleanUrls": true,
  "rewrites": [
    { "source": "/brochure", "destination": "/brochure_TH.html" },
    { "source": "/brochure-infografico", "destination": "/th_infographic_brochure.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Strict-Transport-Security", "value": "max-age=63072000; includeSubDomains; preload" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-Content-Type-Options", "value": "nosniff" }
      ]
    },
    {
      "source": "/(.*)\\.(svg|png|jpg|jpeg|gif|webp|css|js)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=2592000, immutable" }
      ]
    }
  ]
}
